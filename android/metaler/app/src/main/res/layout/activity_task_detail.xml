<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context=".TaskDetailActivity"
    android:weightSum="1">

    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="12dp"
        android:text="湖南项目需要未来预算软件预算土建造价" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="1.0px"
        android:background="@color/gray_ef" />


    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/task_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="1"
            android:text="招标中"
            android:padding="12dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/task_price"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="200元"
            android:textColor="@color/orange" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="1.0px"
        android:background="@color/gray_ef" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:id="@+id/task_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="12dp"
            android:text="5人正在参与"
            android:textAppearance="?android:attr/textAppearanceSmall"
            style="@android:style/TextAppearance.Small"
            android:textColor="@color/gray"/>
        <Button
            android:id="@+id/button_orders"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:clickable="true"
            android:text="接单"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/gray_ef">
    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp">

        <ImageView
            android:src="@drawable/photo"
            android:id="@+id/task_releaser_cover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="叶良辰"
            android:id="@+id/textView3"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_alignTop="@+id/task_releaser_cover"
            android:layout_toRightOf="@+id/task_releaser_cover"
            android:layout_toEndOf="@+id/task_releaser_cover" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/task_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/gray"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="发布于 2016年10月1日"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_alignBottom="@+id/task_releaser_cover"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/gray_ef">
    </View>
    <TextView
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  含6栋工业厂房基础（含桩）土建预算；
  含宿舍楼和砖混附房（含大门）的土建预算"/>

</LinearLayout>
